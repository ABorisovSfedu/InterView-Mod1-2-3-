{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200
    },
    "subtitle": {
      "type": "string",
      "maxLength": 300
    },
    "cta_text": {
      "type": "string",
      "maxLength": 50
    },
    "background_image": {
      "type": "string",
      "format": "uri"
    },
    "height": {
      "type": "string",
      "enum": ["sm", "md", "lg", "xl"]
    }
  },
  "required": ["title"],
  "additionalProperties": false
}
