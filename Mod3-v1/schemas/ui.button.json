{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "text": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "label": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "variant": {
      "type": "string",
      "enum": ["primary", "secondary", "outline", "ghost", "link"]
    },
    "size": {
      "type": "string",
      "enum": ["sm", "md", "lg"]
    },
    "disabled": {
      "type": "boolean"
    }
  },
  "required": ["text"],
  "additionalProperties": false
}
