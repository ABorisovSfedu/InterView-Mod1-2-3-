{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
          },
          "description": {
            "type": "string",
            "maxLength": 300
          },
          "image": {
            "type": "string",
            "format": "uri"
          },
          "link": {
            "type": "string",
            "format": "uri"
          }
        },
        "required": ["title"]
      },
      "minItems": 1,
      "maxItems": 20
    },
    "layout": {
      "type": "string",
      "enum": ["grid", "list", "carousel"]
    },
    "columns": {
      "type": "integer",
      "minimum": 1,
      "maximum": 6
    }
  },
  "required": ["items"],
  "additionalProperties": false
}
